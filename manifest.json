{
  "manifest_version": 2,
  "name": "Remnant",
  "version": "versionString",
  "description": "Minimalistic notepad/to-do list",
  "icons": { "128": "remnant.png" },
  "version": "1.1",
  "background": {
    "scripts": ["test.js"]},

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "permissions": [
	"contextMenus"
  ],
  
  "browser_action": {
    "default_icon": "remnant.png",
    	"48": "remnant.png",
    	"128": "remnant.png"
  },
  
  
  "chrome_url_overrides" : {
    "newtab": "remnant.html"
  }

  


}
